<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.friendfinder.android">

    <!-- WiFi permissions -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    
    <!-- Location permission required for Wi-Fi scanning on many Android versions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Android 13+ new permission for Wi-Fi nearby devices -->
    <uses-permission android:name="android.permission.NEARBY_WIFI_DEVICES" />

    <!-- Internet permission for backend communication -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.FriendFinder">
        
        <!-- WiFi Direct Activity -->
        <activity
            android:name=".wifi.WiFiDirectActivity"
            android:exported="true"
            android:label="WiFi Direct Discovery">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Optional: Foreground service for persistent socket server -->
        <!-- 
        <service
            android:name=".wifi.ForegroundSocketService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
        -->
    </application>

</manifest>
