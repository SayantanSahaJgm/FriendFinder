{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "types": ["react", "react-native"]
  },
  "exclude": ["node_modules", "dist"]
}
